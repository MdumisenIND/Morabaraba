<Window x:Class="Morabaraba.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Morabaraba"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized" WindowStyle="None"
        Title="Loading" Height="768" Width="1366"
        x:Name="Load" >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/logo.png" Stretch="None"/>
        </Grid.Background>
        <ProgressBar x:Name="progress_bar" HorizontalAlignment="Center" Height="40" Margin="494,0,472,70" VerticalAlignment="Bottom" Width="400" RenderTransformOrigin="0.485,-1.4" ValueChanged="progress_bar_ValueChanged"/>
        <Button x:Name="Close" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="50" Height="50" Click="Quit_Click">
            <StackPanel>
                <Image Source="Images/exit.jpg"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>